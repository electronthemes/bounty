{{!< default }} 

<div class="main-body section-gap">
    <div class="container section-gap box_1170">
        <div class="row">
            <div class="col-lg-8 post-list">
                {{#author}}
                <div class="author-details {{#if feature_image}}has-feature-image{{/if}}" style="background-image: url({{ feature_image }})">
                    <h1 class="title">{{ name }}</h1>
                    <p class="desc">{{ bio }}</p>
                    <div class="social-links">
                        {{#if facebook}}
                        <a href="https://www.facebook.com/{{facebook}}" target="_blank"><i class="fa fa-facebook"></i></a>
                        {{/if}}
                        {{#if twitter}}
                        <a href="https://www.twitter.com/{{twitter}}" target="_blank"><i class="fa fa-twitter"></i></a>
                        {{/if}}
                        {{#if website}}
                        <a href="{{website}}" target="_blank"><i class="fa fa-globe"></i></a>
                        {{/if}}
                        <a href="javascript:void(0)"><i class="fa fa-map-marker"></i>&nbsp;&nbsp;&nbsp;{{ location }}</a>
                    </div>
                </div>
                {{/author}}

                <section class="post-area">
                    <div class="row">
                        {{!-- post-card --}}
                        {{#foreach posts}}
                            {{> "post-card"}}
                        {{/foreach}}
                        {{!-- pagination --}}
                        <div class="col-lg-12">
                            {{pagination}}
                        </div>
                    </div>
                </section>
                <!-- End Post Area -->
            </div>
            {{!-- left sidebar --}}
            {{> sidebar }}
        </div>
    </div>
</div>