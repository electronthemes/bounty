{{#get "authors" limit="1" as |user|}}
    {{#user}}
    <div class="single-widget protfolio-widget">
        <div class="profile-image">
            {{#if profile_image}}
                <img class="w-100"
                srcset="{{img_url profile_image size="s"}} 300w,
                        {{img_url profile_image size="m"}} 600w"
                sizes="(max-width: 1000px) 300px, 700px"
                src="{{img_url profile_image size="s"}}"
                alt="{{name}}"
            />
            {{/if}}
            <ul class="social-links">
                {{#if facebook}}
                <li><a href="{{ facebook_url }}"><i class="fa fa-facebook"></i></a></li>
                {{/if}}

                {{#if twitter}}
                <li><a href="{{ twitter_url }}"><i class="fa fa-twitter"></i></a></li>
                {{/if}}

                <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                <li><a href="#"><i class="fa fa-behance"></i></a></li>
            </ul>
        </div>
        <a href="{{ url }}">
            <h4>{{ name }}</h4>
        </a>
        <p class="p-text">
            {{ bio }}
            {{#if website}}
            <br>
            <br>
            <i class="fa fa-globe"></i> <a href="{{ website }}">{{ website }}</a>
            {{/if}}
        </p>
    </div>
    {{/user}}
{{/get}}