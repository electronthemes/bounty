<nav class="pagination">
    {{#if prev}}
    <a class="newer-posts pagination-link" href="{{page_url prev}}">&larr; {{t "Newer Posts"}}</a>
    {{/if}}
    <span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages }}</span>
    {{#if next}}
    <a class="older-posts pagination-link" href="{{page_url next}}">{{t "Older Posts"}}&rarr;</a>
    {{/if}}
</nav>